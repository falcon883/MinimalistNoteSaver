<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coffee.minimalistnotesaver">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.coffee.minimalistnotesaver.TermsAndConditions">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coffee.minimalistnotesaver.About" />
        </activity>
        <activity android:name="com.coffee.minimalistnotesaver.PrivacyPolicy">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coffee.minimalistnotesaver.About" />
        </activity>
        <activity android:name="com.coffee.minimalistnotesaver.About">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coffee.minimalistnotesaver.NotesActivity" />
        </activity>
        <activity android:name="com.coffee.minimalistnotesaver.OpenedNote" />
        <activity android:name="com.coffee.minimalistnotesaver.NewNote" />
        <activity android:name="com.coffee.minimalistnotesaver.NotesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>