<resources>
    <attr name="customDrawableBackgroundColor" format="reference" />
    <attr name="layoutBackground" format="reference" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="customDrawableBackgroundColor">@color/colorAccent</item>
        <item name="layoutBackground">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="actionBarPopupTheme">@style/ActionModePopup</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ActionModePopup">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorBackgroundFloating">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>
